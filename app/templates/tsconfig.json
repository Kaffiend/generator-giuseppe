{
  "compilerOptions": {
    "target": "<%= esVersion %>",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "outDir": "./build",
    "sourceMap": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "typeRoots": [
    "./node_modules/@types",
    "./node_modules"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}